{
  "name": "site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint:next": "next lint",
    "lint:check": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "fmt:check": "biome format ./src",
    "fmt:fix": "biome format --write ./src",
    "pre-commit": "bun run fmt:fix && bun run lint:check"
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": "bun run pre-commit"
  },
  "dependencies": {
    "next": "14.1.2",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}
